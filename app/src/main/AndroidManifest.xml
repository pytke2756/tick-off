<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tickoff">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/tickoff_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/tickoff_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TickOff">
        <activity
            android:name=".activities.LottieActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ForgottenActivity"
            android:exported="false"
            android:screenOrientation="nosensor"/>
        <activity
            android:name=".activities.RegistrationActivity"
            android:exported="false"
            android:screenOrientation="nosensor"/>
        <activity
            android:name=".activities.LoginActivity"
            android:exported="false"
            android:screenOrientation="nosensor"/>
        <activity
            android:name=".activities.MainActivity"
            android:exported="false"
            android:screenOrientation="nosensor"/>
    </application>

</manifest>